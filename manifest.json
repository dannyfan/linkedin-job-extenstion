{
    "name" : "Linkedin Job Extension",
    "version" : "1.0",
    "description" : "Extends Linkdedin's jobs on 'based on profile' page.",
    "permissions" : ["storage"],
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "page_action" : {
        "default_popup" : "popup.html"
    },
    "content_scripts" : [
        {
            "matches" : ["https://www.linkedin.com/jobs/"],
            "run_at" : "document_idle",
            "js" : ["main.js"]
        }
    ],
    "manifest_version" : 2
}